<div class="main-content">
  <div class="new-user-head">
    <h3>Simple-blogへログイン</h3>
  </div>

  <div class="new-users2">
   <div class="user-contents2">
    <%= form_with model: @user, url: user_session_path, class:"registration", local: true do |f| %>
      <div class="field">
       <%= f.label :メールアドレス %><br />
       <%= f.email_field :email, class: "input-area", id: "email", placeholder: "登録済のアドレスを入力", autofocus: true %>
      </div>

     <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, class:"input-area", id:"password", placeholder: "設定したパスワードを入力" %>
     </div>

     <div class="actions">
       <%= f.submit "ログイン", class:"session-btn" %>
     </div>
    <% end %>
     <div class="actions">
     <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>
      <%= link_to "戻る", root_path, class:"return-btn" %>
     </div>
   </div>
  </div>
</div>
