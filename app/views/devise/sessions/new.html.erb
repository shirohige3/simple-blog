<div class="new-users">
 <div class="title2">
   <h2 >ログイン</h2>
 </div>

<%= form_with model: @user, url: user_session_path, class:"registration", local: true do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, class: "input-area", id: "email", placeholder: "登録済のアドレスを入力", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, class:"input-area", id:"password", placeholder: "設定したパスワードを入力" %>
  </div>

  <%# if devise_mapping.rememberable? %>
    <%# <div class="field"> %>
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <%# </div> %>
  <%# end %>

  <div class="actions">
    <%= f.submit "ログイン", class:"submit-btn" %>
  </div>
<% end %>
  <div class="actions">
    <%= link_to "戻る", root_path, class:"return-btn" %>
  </div>

