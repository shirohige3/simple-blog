<%# 新規登録画面 %>
<div class="new-users">
 <div class="title2">
  <h2>-会員情報入力-</h2>
 </div>
  <%# <div class="user-form"> %>

   <%= form_with model:@user, url: user_registration_path, class: 'registration', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
   <div class="label">
    <%= f.label :ニックネーム %>
    <span class="essential">必須</span><br />
    </div>
    <%= f.text_field :nickname, class:"input-area", id: "nickname", placeholder:"例)ヤマダー" %>
  </div>

 <div class="field">
    <%= f.label :名前 %>
    <span class="essential">必須</span><br />
    <%= f.text_field :full_name, class:"input-area", id: "full_name", placeholder:"例)山田太郎" %>
  </div>

   <div class="field">
    <%= f.label :名前カナ %>
    <span class="essential">必須</span><br />
    <%= f.text_field :full_name_kana, class:"input-area", id: "full_name_kana", placeholder:"例)ヤマダタロウ" %>
  </div>

   <div class="field">
    <%= f.label :生年月日 %>
    <span class="essential">必須</span><br />
    <div class="birth-date">
          <%= raw sprintf(
                  f.date_select(
                    :birth_date,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1950,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
     </div>
   </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <span class="essential">必須</span><br />
    <%= f.email_field :email, class:"input-area", id: "email", placeholder:"@を含むメールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
   　<span class="essential">必須</span><br />
    <%= f.password_field :password, class:"input-area", id: "password", placeholder:"6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <%= f.label :パスワードの確認 %>
    <span class="essential">必須</span><br />
    <%= f.password_field :password_confirmation, class:"input-area", id: "password-confirmation", placeholder:"passwordを再入力" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録する", class:"submit-btn" %>
  </div>
   <% end %>
  <div class="actions">
    <%= link_to "戻る", root_path, class:"return-btn" %>
  </div>
</div>
