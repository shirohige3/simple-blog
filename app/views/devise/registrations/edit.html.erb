<%# <h2>Edit <%= resource_name.to_s.humanize %</h2>%>
<%= render "shared/header"%>
 <div class="side-bar">
   <%= render "shared/side_bar_profile"%>
 </div>

 <div class="main-contents">
  <div class="title">変更する情報を入力してください</div>
  <div class="new-users">
  <div class="user-contents3">
<%= form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: { method: :put }) do |f| %>
<%#= form_with model: @user, method: :update, local :true  do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, "ニックネーム（最大文字数は10文字）" %>
      <span class="essential">必須</span><br />
      <%= f.text_field :nickname, class:"input-area", id: "nickname", placeholder:"例)ヤマダー" %>
    </div>
        <div class="field">
     <%= f.label :email, "メールアドレス" %>
      <span class="essential">必須</span><br />
      <%= f.email_field :email, class:"input-area", id: "email", placeholder:"@を含むメールアドレス" %>
    </div>

    <div class="field">
     <%= f.label :password, "新パスワード" %>
      <span class="essential">必須</span><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input-area", id: "password", placeholder:"6文字以上の半角英数字" %>
    </div>

    <div class="field">
     <%= f.label :password_confirmation, "新パスワードの確認" %>
      <span class="essential">必須</span><br />
      <%= f.password_field :password_confirmation,autocomplete: "new-password", class:"input-area", id: "password-confirmation", placeholder:"passwordを再入力" %>
    </div>

  <%# <div class="field"> %>
    <%#= f.label :current_password, "現在のパス" %>
    <%# <span class="essential">必須</span><br /> %>
     <%# <i>(we need your current password to confirm your changes)</i><br /> %>
    <%#= f.password_field :current_password, autocomplete: "current-password", class:"input-area", placeholder:"現在のパスワードを入力してください" %>
  <%# </div> %>
  <div class="field">
   <%= f.label :birth_date, "誕生日" %>
     <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birth_date,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1950,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
     </div>
  </div>

  <div class="field">
   <%= f.label :introduction, "自己紹介" %>
   <%= f.text_area :introduction, class:"introduction", placeholder:"自己紹介を入力してください。", row:"3"  %>
  </div>
  <div class="actions">
    <%= f.submit "更新する", class:"update-btn" %>
  </div>
<% end %>

  </div>
 </div>
</div>

