<%# <マイページ> %>
<div class="blog-lists">
  <% if @user.blog_id > 0 %> 
   <% @blogs.each do |blog| %>
    <li class="list">
     <%= link_to blog_path(blog.current_user.id) do %>
      <div class="blog-image"> 
       <% if blog.image != 0 %>
        <%#= image_tag blog.image, class: "blog-img", if blog.image.attached? %>
       <% else %>
        <%= link_to image_tag "neco.jpeg", class: "blog-img"%>
        <% end %>

       <div class="blog-info">
        <h3 class="blog-title">
         <%= blog.title %>
        </h3>
       </div>
      </div>
     <% end %>
    </li>
   <% end %>
    <%#blogがまだない時の表示%>
  <% else %>
   <div class="blog-list">
    <div class="blog-image">
        <%= link_to image_tag "neco.jpeg", class: "blog-img"%>
     <h2>さぁ、あなたのブログを投稿していきましょう！</h2>
    </div>
   </div>
  <% end %>
  </ul>
  <div class="post">
   <%= link_to "記事を書く", new_blog_path, class:"post-btn" %>
   </div>
</div>
