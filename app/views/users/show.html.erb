<%# <マイページ> %>
<%= render "shared/header"%>
 <div class="side-bar">
   <%= render "shared/side_bar_user"%>
 </div>
   <%# <ブログ展開> %>
<div class="main-content">
  <h1 class="title">My Blogs</h1>
   <div class="blog-contents">
    <% if @blogs.size > 0 %> 
      <%= render "shared/blog"%>
        <%#blogがまだない時の表示%>
    <% else %>
     <div class="blog-list">
      <div class="blog-image">
        <%= link_to image_tag "neco.jpeg", class: "blog-img"%>
        <h2>さぁ、あなたのブログを投稿していきましょう！</h2>
      </div>
     </div>
    <% end %>
   </div>
</div>